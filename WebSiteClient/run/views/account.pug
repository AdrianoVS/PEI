extends layout

block content
    body(onload="divideNome('"+user.NAME+"')") 
        <!-- MAIN CONTENT -->
        div(class='pg-opt')
            div(class='container')
                div(class='row')
                    div(class='col-md-6')
                        h2 Gestão de conta
                    div(class='col-md-6')
                        ol(class='breadcrumb')
                            li
                                a(href='/home') Home

        section(class='slice bg-white')
            div(class='wp-section')
                div(class='container')
                    if status
                        div(class=errors ? "alert alert-danger" : "alert alert-success")=status
                    div(class='wp-block default user-form')
                        div(class='form-header')
                            h2 Editar Conta - #{user.NAME}
                        div(class='form-body')
                            form(action='' id='frmAccountEdit' class='sky-form' method='post')
                                section
                                    div(class='row')
                                        section(class='col-xs-6')
                                            label(class='label') Primeiro Nome
                                            label(class='input')
                                                i(class='icon-append fa fa-user')
                                                input(type='text' name='fname' placeholder='')
                                        section(class='col-xs-6')
                                            label(class='label') Ultimo Nome
                                            label(class='input')
                                                i(class='icon-append fa fa-user')
                                                input(type='text' name='lname' placeholder='')
                                    div(class='row')
                                        section(class='col-xs-6')
                                            label(class='label') Contacto Telefonico
                                            label(class='input')
                                                i(class='icon-append fa fa-phone')
                                                input(type='text' name='phone' placeholder='' pattern='[0-9]{9}$')
                                fieldset
                                    div(class='row')
                                        section(class='col-xs-4')
                                            label(class=errors.country ? 'select state-error' : 'select')
                                                select(name='country')
                                                    option(value='0' disabled='') País
                                                    each name, value in countries
                                                        if value == user.COUNTRY
                                                            option(value=value selected='selected') #{name}
                                                        else
                                                            option(value=value) #{name}
                                                if errors.country
                                                    div(class="note note-error")=errors.country.message
                                    section(class='col-xs-4')
                                        label(class='input')
                                            input(type='text' name='rua' placeholder='Rua')
                                    section(class = 'col-xs-4')
                                        label(class='input')
                                            input(type='text' name='porta' placeholder='Número da Porta')
                                    section(class='col-xs-3')
                                        label(class='input')
                                            input(type='text' name='zip' placeholder='Código Postal' pattern='[0-9]{4}-[0-9]{3}$')
                                    section(class='col-xs-7')
                                        label(class='input')
                                            input(type='text' name='city' placeholder='Cidade')
                                div(class='row')
                                    figure(class="myfigure")
                                        img(class="joint-img" id="img1" name="img1" src="/images/avatar.png" alt="your image")
                                        figcaption
                                            label(class="custom-file-upload")
                                                input(class="joint" type='file' id="foto1" name="foto1")
                                                p Mudar Imagem


                                        section
                                            input(type="submit" class='btn btn-base pull-right' value='Guardar alterações')

                                    script.
                                        function divideNome(nome){
                                            var name = nome.split(" ")
                                            $('#fname').attr('value', name[0])
                                            $('#lname').attr('value', name[1])
                                        }