extends layout
block content
    .wrapper
        .container
            .row
                include menu
                .span5
                    .content
                        .module
                            a(href='./clients')
                                .module-head
                                    h3 Todos os Clientes
                            .module-option.clearfix
                                form
                                    .input-append.pull-left
                                        input.span2(type='text', placeholder='Filtrar por nome...')
                                        button.btn(type='submit')
                                            i.icon-search
                                .btn-group.pull-right(data-toggle='buttons-radio')
                                    button.btn(type='button') Todos
                                    button.btn(type='button') Filtro1
                                    button.btn(type='button') Filtro2
                            .module-body
                                .row-fluid
                                    .span6
                                        .media.user
                                            .media-body
                                                h3.media-title(style='text-align: center;')
                                                    | Empresa 1
                                                p(style='text-align: center;')
                                                    small.muted Portugal
                                                .media-option.btn-group.shaded-icon.pull-right
                                                    button.btn.btn-small
                                                        i.icon-envelope
                                                    button.btn.btn-small
                                                        i.icon-share-alt
                                    br
                                .pagination.pagination-right
                                        ul
                                            li
                                                a(href='#')
                                                    i.icon-double-angle-left
                                            li
                                                a(href='#') 1
                                            li
                                                a(href='#') 2
                                            li
                                                a(href='#') 3
                                            li
                                                a(href='#')
                                                    i.icon-double-angle-right
                        // /.content
                .span4
                        .content
                            .module.message
                                a(href='./tasks')
                                    .module-head
                                        h3 Gest&atilde;o de Clientes
                                .module-option.clearfix
                                    .pull-left
                                        | Filter : &nbsp;
                                        .btn-group
                                            button.btn Todas
                                            button.btn.dropdown-toggle(data-toggle='dropdown')
                                                span.caret
                                            ul.dropdown-menu
                                                li
                                                    a(href='#') Todas
                                                li
                                                    a(href='#') Por ver
                                                li
                                                    a(href='#') Feita
                                                li.divider
                                .module-body.table
                                    table.table.table-message(style='display: flex; flex-direction: column; height: 450px;width: 100%;')
                                        tbody(style='overflow-y: auto')
                                            tr.heading(style='flex-shrink: 0')
                                                td.cell-icon
                                                td.cell-title Task
                                                td.cell-status.hidden-phone.hidden-tablet Status
                                            tr.task
                                                td.cell-icon
                                                    i.icon-checker.high
                                                td.cell-title
                                                    div
                                                        | Lorem ipsum dolor sit et, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et doloremagna cliqua.
                                                td.cell-status.hidden-phone.hidden-tablet
